{
  "name": "haizi-poetry",
  "version": "2.0.0",
  "description": "海子诗歌集 - 一个美观的诗歌展示网站，支持分页和内容管理",
  "main": "index.html",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./static/css/tailwind.css",
    "watch-css": "tailwindcss -i ./src/input.css -o ./static/css/tailwind.css --watch",
    "dev": "npm run build-css && npx serve .",
    "build": "npm run build-css",
    "start": "npx serve .",
    "preview": "npx serve . -p 3000"
  },
  "keywords": [
    "poetry",
    "haizi",
    "chinese-literature",
    "static-site",
    "markdown",
    "pagination",
    "responsive-design"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "serve": "^14.0.0",
    "tailwindcss": "^3.4.17"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
